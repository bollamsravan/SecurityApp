<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shravankumar.security.ResidentHome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <Button
                android:id="@+id/notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="Notifications"
                android:textSize="20dp"
                android:background="#A4C639"
                android:layout_marginTop="80dp"

                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"

                />
            <TextView
                android:id="@+id/availability"
                android:background="#A4C639"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"

                android:layout_height="wrap_content"
                android:text="Availability"
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_marginRight="100dp"
                android:layout_marginTop="40dp"
                android:paddingTop="0dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:layout_below="@id/notifications" />
            <ToggleButton
                android:id="@+id/toggleButton"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ToggleButton"
                android:layout_alignParentRight="true"
                android:layout_below="@id/notifications"
                android:textColor="#000000"
                android:layout_marginTop="33dp"

                />

            <Button
                android:id="@+id/logout_resident"
                android:background="#A4C639"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:onClick="Logout"
                android:layout_below="@id/availability"
                android:layout_marginTop="40dp"
                />
            <Button
                android:id="@+id/edit_profile"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="40dp"
                android:background="#A4C639"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:layout_below="@id/logout_resident"
                android:onClick="edit"
                />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>
